<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.Giang.hosme.HomeFrag"
    android:id="@+id/activityMain">

    <com.emilsjolander.components.StickyScrollViewItems.StickyScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@color/light_blue"
        android:layout_weight="10"
        android:scrollbars="none">

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/light_blue"
                    android:tag="sticky">

                    <ImageView
                        android:isScrollContainer="false"
                        android:inputType="none"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginStart="40dp"
                        android:src="@drawable/icon_hosme"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="30dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="HOSME"
                            android:textSize="26sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chào mừng bạn!"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"/>

                        <TextView
                            android:id="@+id/txtNameUser"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hoàng Thị Nam"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"/>

                    </LinearLayout>


                </LinearLayout>

                <GridView
                    android:id="@+id/grMainFunction"
                    android:layout_width="wrap_content"
                    android:layout_height="295dp"
                    android:layout_marginStart="20dp"
                    android:duplicateParentState="true"
                    android:gravity="center"
                    android:numColumns="3"
                    android:layout_margin="10dp"
                    android:padding="15dp"
                    android:background="@drawable/custom_1"
                    android:scrollbars="none"
                    android:paddingLeft="30dp"/>

                <LinearLayout
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="270dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/custom_1"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bác sĩ"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/dard_blue"/>

                    <GridView
                        android:id="@+id/gvDoctor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:numColumns="4"
                        android:duplicateParentState="true"
                        android:scrollbars="none"/>

                    <Button
                        android:id="@+id/btnDoctor"
                        style="@style/Theme.AppCompat.Light.NoActionBar"
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:text="Xem chi tiết bác sĩ"
                        android:background="@drawable/custom_2"
                        android:textColor="@color/blue"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/custom_1"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Chuyên khoa"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/dard_blue"/>

                    <GridView
                        android:id="@+id/gvSpecialist"
                        android:layout_width="match_parent"
                        android:layout_height="230dp"
                        android:layout_marginTop="10dp"
                        android:numColumns="5"
                        android:duplicateParentState="true"
                        android:scrollbars="none"/>

                    <Button
                        android:id="@+id/btnSpecialist"
                        style="@style/Theme.AppCompat.Light.NoActionBar"
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:text="Xem chi tiết chuyên khoa"
                        android:background="@drawable/custom_2"
                        android:textColor="@color/blue"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="15dp"
                        android:layout_gravity="center"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/custom_1"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <LinearLayout
                        android:id="@+id/lnNew1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tin ức y tế"
                            android:layout_marginStart="25dp"
                            android:layout_marginTop="10dp"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/dard_blue"/>

                        <ImageView
                            android:id="@+id/imvMainNew"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center"
                            android:src="@drawable/new_1"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="25sp"
                            android:text="Kỹ thuật kết hợp vi nội soi và vi phẫu"
                            android:textStyle="bold"
                            android:textSize="17sp"
                            android:textColor="@color/black"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="25sp"
                            android:layout_marginEnd="25sp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/icon_user"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="10dp"
                                android:text="Nguyễn Thị Như Thảo"
                                android:textSize="16sp"
                                android:textColor="@color/black"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:layout_gravity="center_vertical"
                                android:text="20/04/2024"
                                android:textSize="16sp"
                                android:textColor="@color/black"/>

                        </LinearLayout>

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvNew"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="@android:color/transparent"
                        android:dividerHeight="0dp" />

                    <Button
                        android:id="@+id/btnNews"
                        style="@style/Theme.AppCompat.Light.NoActionBar"
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:text="Xem tất cả tin tức"
                        android:background="@drawable/custom_2"
                        android:textColor="@color/blue"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"/>

                </LinearLayout>

        </LinearLayout>

    </com.emilsjolander.components.StickyScrollViewItems.StickyScrollView>

</FrameLayout>