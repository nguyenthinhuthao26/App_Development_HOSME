<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    app:cardUseCompatPadding="true"
    android:layout_marginTop="10dp"
    android:padding="10dp">

    <LinearLayout
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/custom_16_3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:weightSum="10"
            android:gravity="end">

            <TextView
                android:id="@+id/txtNameNewRecycler"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="Tên bài viết"
                android:textColor="@color/black"
                android:gravity="top"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_weight="4"
                android:ellipsize="end"
                android:maxLines="2"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="8dp"
                android:layout_weight="6">

            <ImageView
                android:id="@+id/imvNewRecycler"
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:src="@drawable/img"
                android:gravity="end"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:weightSum="10"
            android:gravity="center_vertical"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/icon_user"/>

            <TextView
                android:id="@+id/txtNameAuthorRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên tác giả"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_weight="4.5"/>

            <TextView
                android:id="@+id/txtTimeNewRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thời gian"
                android:layout_weight="5.5"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:gravity="end"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>