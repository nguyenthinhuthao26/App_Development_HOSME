<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.Chi.hosme.PaymentMethods"
    android:background="@color/light_blue_2">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/custom_5"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imvBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/baseline_arrow_back_24" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Phương thức thanh toán"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:src="@drawable/icon_chuthapxanh" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/linearLayout"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnCash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thanh toán tại quầy"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:padding="10dp"
            android:layout_margin="15dp"
            android:background="@drawable/custom_button_2"/>


        <Button
            android:id="@+id/btnDebitCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thẻ ghi nợ"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:padding="10dp"
            android:layout_margin="15dp"
            android:background="@drawable/custom_button_2"/>


        <Button
            android:id="@+id/btnMoMo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MoMo"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:padding="10dp"
            android:layout_margin="15dp"
            android:background="@drawable/custom_button_2"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>