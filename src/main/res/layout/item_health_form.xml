<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:orientation="vertical"
    android:background="@drawable/custom_15_2">

    <TextView
        android:id="@+id/txtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HOÀNG THỊ NAM"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/dard_blue"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Khoa khám: "
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/dard_blue"/>

        <TextView
            android:id="@+id/txtKhoaKham"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hen CO-P"
            android:textSize="18sp"
            android:textColor="@color/dard_blue"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="3dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày khám: "
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/dard_blue"/>

        <TextView
            android:id="@+id/txtNgayKham"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thứ 6, 20/04/2024"
            android:textSize="18sp"
            android:textColor="@color/dard_blue"/>

    </LinearLayout>

</LinearLayout>