<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.Chi.hosme.PaymentListBillDetail"
    android:background="@color/light_blue_2">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/custom_5"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imvBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/baseline_arrow_back_24" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Chi tiết hóa đơn"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:src="@drawable/icon_chuthapxanh" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/linearLayout"
        android:background="@drawable/custom_6"
        android:layout_margin="15dp">

        <TextView
            android:id="@+id/txtDateTime"
            android:background="@drawable/custom_9"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="12/04/2024"
            android:textSize="21sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:paddingLeft="25dp"
            android:gravity="center_vertical"
            android:layout_gravity="left"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:src="@drawable/icon_user"
                android:layout_weight="0.5"/>

            <TextView
                android:id="@+id/txtPatientName"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="HOÀNG THỊ NAM"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_weight="9"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingLeft="10dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="45dp"
                android:src="@drawable/icon_ongnghe"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/txtDepartmentName"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Xét nghiệm máu"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_weight="9"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingLeft="10dp">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/logo_ump"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/txtAddressHos"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Cơ sở 201 Nguyễn Chí Thanh"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_weight="9"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingLeft="10dp">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/icon_calendar2"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/txtCreateDate"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="12/04/2024"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_weight="9"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingLeft="10dp">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/icon_clock"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/txtCreateTime"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="09:00 - 10:00"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_weight="9"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingLeft="10dp">
            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/icon_cent"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/txtPriceService"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="150.000 VNĐ"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/blue"
                android:layout_weight="9"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnPayment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button_1"
            android:padding="15dp"
            android:text="THANH TOÁN"
            android:textSize="18sp"
            android:textColor="@color/white"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>