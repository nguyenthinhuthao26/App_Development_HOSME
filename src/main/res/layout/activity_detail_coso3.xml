<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.Thảo.hosme.DetailCoso3">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/imvcoso3"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/imvBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:src="@drawable/baseline_arrow_back_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textview"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:alpha="0.85"
            android:background="#B8C6CA"
            android:gravity="center"
            android:text="Bệnh viện Y Đại Học Y Dược TP HCM"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="200dp"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/icon_locate"
                    android:alpha="0.5"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cơ sở 221B Hoàng Văn Thụ, Phường 8, Quận Phú Nhuận, TP. Hồ Chí Minh"
                    android:layout_marginStart="15dp"
                    android:textSize="16sp"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giới thiệu"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/blue"
                android:paddingTop="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đại học Y Dược TPHCM - Cơ sở 3 không chỉ là một bệnh viện uy tín hàng đầu tại Việt Nam, mà còn là địa điểm chuyên sâu về khám chữa bệnh và chăm sóc sức khỏe toàn diện cho người dân. Là cơ sở thực hành của Đại học Y Dược TPHCM, Cơ sở 3 luộn dẫn đầu về chất lượng, đạo đức nghề nghiệp và ứng dụng các phương pháp điều trị tiên tiến, kết hợp giữa Y học cổ truyền và Y học hiện đại."
                android:textSize="16sp"
                android:paddingTop="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đại học Y Dược TPHCM - Cơ sở 3 là một trong những bệnh viện uy tín hàng đầu Việt Nam. Là trung tâm đầu ngành trong điều trị, chẩn đoán, đào tạo và nghiên cứu khoa học, Cơ sở 3 luôn tiên phong trong công tác áp dụng các kết quả nghiên cứu khoa học vào trong thực tiễn điều trị lâm sàng. Cùng Hosme tìm hiểu thông tin chi tiết về bệnh viện trong bài viết bên dưới."
                android:textSize="16sp"
                android:paddingTop="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lịch sử hình thành và phát triển của UMC3"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/blue"
                android:paddingTop="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bệnh viện Đại học Y Dược TPHCM - Cơ sở 3 được thành lập từ năm từ năm 2000, trên cơ sở sáp nhập Trường Trung học Y Dược Dân tộc và Khoa Y học cổ truyền - Đại học Y Dược TPHCM."
                android:textSize="16sp"
                android:paddingTop="10dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/cs21"
                android:padding="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bệnh viện Đại học Y Dược TPHCM - Cơ sở 3 luôn dẫn đầu về chuẩn mực và y đức trong công tác khám chữa bệnh"
                android:textSize="16sp"
                android:gravity="center"
                android:textStyle="italic"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ban đầu, Cơ sở 3 chỉ có 2 chuyên khoa là Y học cổ truyền và Châm cứu dưỡng sinh. Ngày nay, Bệnh viện đã hoàn thiện bộ máy hoạt động với 2 khoa, 3 đơn vị, 1 trung tâm và các phòng ban hậu cần. Là cơ sở thực thành của Đại học Y Dược TPHCM, UMC3 luôn dẫn đầu về chuẩn mực và y đức trong công tác khám chữa bệnh."
                android:textSize="16sp"
                android:paddingTop="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tìm hiểu thông tin về Bệnh viện Đại Học Y Dược Tp HCM"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/blue"
                android:paddingTop="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bệnh Viện Đại Học Y Dược Thành Phố Hồ Chí Minh - Cơ Sở 1, tọa lạc tại quận 5, Thành phố Hồ Chí Minh, là một trong những trung tâm y tế uy tín và đáng tin cậy nhất trong cộng đồng. Với tầm nhìn và phương châm Thấu hiểu nỗi đau – Niềm tin của bạn, bênh viện đã xây dựng một sứ mệnh chăm sóc sức khỏe với sự tận tâm và chất lượng cao."
                android:textSize="16sp"
                android:paddingTop="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Các chuyên khoa và dịch vụ tại bệnh viện"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/blue"
                android:paddingTop="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Khoa Khám Bệnh"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:paddingTop="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Được trang bị các kỹ thuật đặc thù của Y học cổ truyền kết hợp với y học hiện đại, đáp ứng nhu cầu của mọi lứa tuổi trong việc chẩn đoán và điều trị các bệnh lý như cơ xương khớp, đau cấp/mạn tính, phục hồi chức năng vận động/cảm giác sau đột quỵ, rối loạn chức năng cơ thể và nhiều hơn nữa."
                android:textSize="16sp"
                android:paddingTop="10dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/cs23"
                android:padding="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Khoa Khám bệnh của UMC3 khám chữa bệnh bằng cách kết hợp y học cổ truyền với y học hiện đại"
                android:textSize="16sp"
                android:gravity="center"
                android:textStyle="italic"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Khám Sức Khỏe Tổng Quát"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:paddingTop="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cung cấp các gói khám, tầm soát, chăm sóc và tư vấn sức khỏe định kỳ cho cá nhân, doanh nghiệp và tổ chức qua các gói khám theo lứa tuổi và giới tính. Bệnh viện đồng thời đáp ứng cả nhu cầu khám chữa bệnh tại các địa điểm ngoại trú với các gói khám chuyên sâu."
                android:textSize="16sp"
                android:paddingTop="10dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/cs26"
                android:padding="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bệnh viện Đại học Y Dược TPHCM - Cơ sở 3 cung cấp dịch vụ khám sức khỏe tổng quát để chăm sóc sức khỏe toàn diện cho người dân"
                android:textSize="16sp"
                android:gravity="center"
                android:textStyle="italic"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Điều Trị Nội Trú - Khoa Y Học Cổ Truyền"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:paddingTop="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Áp dụng phương pháp Đông - Tây y trong điều trị các bệnh lý như cơ xương khớp, tim mạch, thần kinh, tiêu hóa gan mật, tiết niệu sinh dục, hô hấp, nội tiết, dinh dưỡng và chuyển hóa."
                android:textSize="16sp"
                android:paddingTop="10dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/cs27"
                android:padding="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đơn vị nội trú của UMC3 kết hợp Đông – Tây y trong quá trình khám và điều trị"
                android:textSize="16sp"
                android:gravity="center"
                android:textStyle="italic"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đơn Vị Điều Trị Ban Ngày - Điều Trị Ngoại Trú"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:paddingTop="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chuyên điều trị các bệnh lý đau, liệt, rối loạn chức năng cơ thể và nhiều bệnh lý khác, cũng như cung cấp các dịch vụ như châm cứu, cấy chỉ, xoa bóp bấm huyệt, vật lý trị liệu và các liệu pháp truyền thống khác."
                android:textSize="16sp"
                android:paddingTop="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đơn Vị Cận Lâm Sàng"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:paddingTop="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Trang bị nhiều thiết bị hiện đại để đáp ứng nhu cầu xét nghiệm và chẩn đoán của bệnh nhân nội trú và ngoại trú. Các dịch vụ bao gồm thực hiện các xét nghiệm, chẩn đoán hình ảnh, thăm dò chức năng,..."
                android:textSize="16sp"
                android:paddingTop="10dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/cs28"
                android:padding="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đơn vị Cận lâm sàng thực hiện các kỹ thuật Cận lâm sàng của toàn bộ Cơ sở, phục vụ cả nội và ngoại trú"
                android:textSize="16sp"
                android:gravity="center"
                android:textStyle="italic"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Trung Tâm U Máu"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:paddingTop="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chuyên khám và điều trị các bệnh lý về u máu nhũ nhi, dị dạng tĩnh mạch, giãn mạch và nhiều bệnh lý da liễu khác."
                android:textSize="16sp"
                android:paddingTop="10dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/cs29"
                android:padding="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Trung tâm U máu của UMC3 tổ chức hội chẩn trực tuyến hàng tháng với các cơ sở y tế uy tín toàn quốc"
                android:textSize="16sp"
                android:gravity="center"
                android:textStyle="italic"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hình ảnh"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/blue"
                android:paddingTop="10dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvcoso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>