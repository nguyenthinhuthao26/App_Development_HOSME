<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.Chi.hosme.ProfileDetail"
    android:orientation="vertical"
    android:background="@color/light_blue_2">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/custom_5"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/imvBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/baseline_arrow_back_24" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Chọn Thông Tin"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:src="@drawable/icon_chuthapxanh" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        android:layout_marginTop="20dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/icon_user"
                android:layout_marginStart="15dp"/>

            <TextView
                android:id="@+id/txtInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thông Tin Bệnh Nhân"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:weightSum="5"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Họ và Tên"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_weight="2"
                android:gravity="left"/>

            <TextView
                android:id="@+id/txtPatientName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tên"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_weight="3"
                android:gravity="right"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/custom_8"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày Sinh"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_weight="2"
                android:gravity="left"/>

            <TextView
                android:id="@+id/txtPatientDOB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dob"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_weight="3"
                android:gravity="right"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/custom_8"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giới Tính"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_weight="2"
                android:gravity="left"/>

            <TextView
                android:id="@+id/txtPatientGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="gender"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_weight="3"
                android:gravity="right"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/custom_8"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã số bệnh nhân"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_weight="2"
                android:gravity="left"/>

            <TextView
                android:id="@+id/txtPatientID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mabenhnhan"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_weight="3"
                android:gravity="right"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/custom_8"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CCCD"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_weight="2"
                android:gravity="left"/>

            <TextView
                android:id="@+id/txtPatientIDCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cccd"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_weight="3"
                android:gravity="right"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/custom_8"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_weight="2"
                android:gravity="left"/>

            <TextView
                android:id="@+id/txtPatientEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Not update"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_weight="3"
                android:gravity="right"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/custom_8"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số Điện Thoại"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_weight="2"
                android:gravity="left"/>

            <TextView
                android:id="@+id/txtPhoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sdt"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_weight="3"
                android:gravity="right"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/custom_8"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="8"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Địa Chỉ"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_weight="0"
                android:gravity="left"/>

            <TextView
                android:id="@+id/txtPatientAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12 Linh Trung, Thủ Đức, Thành Phố Hồ Chí Minh"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_weight="8"
                android:gravity="right"/>

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.950">

        <Button
            android:id="@+id/btnEdit"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Chỉnh Sửa"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@drawable/custom_button_2"
            android:layout_marginStart="15dp"
            android:padding="10dp"/>

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Xoá hồ sơ"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@drawable/custom_button_2"
            android:layout_marginStart="15dp"
            android:padding="10dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>