<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginBottom="15dp"
        android:id="@+id/linearContainer1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/custom_6"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">
        <TextView
            android:id="@+id/txtDate"
            android:background="@drawable/custom_9"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="12/04/2024"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:paddingLeft="25dp"
            android:gravity="center_vertical"
            android:layout_gravity="left"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:layout_marginTop="10dp">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:src="@drawable/icon_user"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/txtPatientName"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="HOÀNG THỊ NAM"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_weight="9"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingLeft="10dp">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:src="@drawable/icon_ongnghe"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/txtDepartmentName"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Xét nghiệm máu"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_weight="9"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>